<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:paddingVertical="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/settings_item_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    style="@style/TextAppearance.Sage.Settings.Subheader"
                    android:text=""/>
                <androidx.appcompat.widget.SwitchCompat
                    android:theme="@style/SageSwitchTheme"
                    android:id="@+id/settings_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/settings_item_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/light_text"
                android:fontFamily="@font/lato"
                style="@style/TextAppearance.Sage.Settings.Subheader"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/settings_action"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@drawable/arrow"
            android:contentDescription="@string/rsb_continue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingVertical="8dp"
            app:tint="@color/denim" />
    </RelativeLayout>

</RelativeLayout>