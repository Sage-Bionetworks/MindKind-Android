<com.shawnlin.numberpicker.NumberPicker
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/number_picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:np_selectedTextSize="18sp"
    app:np_textSize="16sp"
    app:np_textColor="@color/black"
    android:layout_marginHorizontal="@dimen/conversation_button_margin"
    app:np_dividerColor="@color/reply_background"
    app:np_dividerDistance="72dp"
    app:np_itemSpacing="0dp"
    app:np_lineSpacingMultiplier="1.75"
    >

</com.shawnlin.numberpicker.NumberPicker>
