<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:paddingTop="24dp">

    <TextView
        style="@style/TextAppearance.Sage.Header"
        android:id="@+id/externalIdLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:textColor="@color/white"
        android:text="Enter your External ID"
        tools:ignore="HardcodedText"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/TextAppearance.Sage.Header"
        android:id="@+id/externalId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/externalIdLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:importantForAutofill="no"
        android:textColor="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:textSize="36sp"
        android:textColorHint="@color/appLightGray"
        tools:ignore="HardcodedText" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_container"
        android:indeterminate="true"/>

    <FrameLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <com.google.android.material.button.MaterialButton
            style="@style/Sage.MaterialButton.Rounded"
            android:id="@+id/signIn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Done"
            tools:ignore="HardcodedText" />

    </FrameLayout>

</RelativeLayout>