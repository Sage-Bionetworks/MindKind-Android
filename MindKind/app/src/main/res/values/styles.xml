<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royal500</item>
        <item name="colorPrimaryDark">@color/royal600</item>
        <item name="colorAccent">@color/butterscotch500</item>
        <item name="colorControlHighlight">@color/ocean100</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>

    <!-- Setting window animation -->
    <style name="AppTheme.WindowTransition" parent="android:Theme.Translucent">>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Sage.MaterialButton.Rounded" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/sageResearchSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/sageResearchSecondary</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:strokeColor">@color/sageResearchSecondaryLight</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Sage.RoundedButton</item>
    </style>

    <style name="Sage.MaterialButton.Rounded.Disabled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/button_color_disabled</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/button_color_disabled</item>
        <item name="android:textColor">@color/button_text_color_disabled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:strokeColor">@color/sageResearchSecondaryLight</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Sage.RoundedButton</item>
    </style>

    <style name="Sage.MaterialButton.UnderlinedBorderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:strokeColor">@color/sageResearchSecondaryLight</item>
    </style>

    <style name="ShapeAppearanceOverlay.Sage.RoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.Sage"/>
    <style name="TextAppearance.Sage.Body">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.Sage.Body.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.Sage.Header">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.Sage.SubHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>

    <style name="ConversationTimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorControlNormal">@color/reply_background</item>
    </style>

    <style name="ConversationNumberPicker" parent="">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:colorControlNormal">@color/reply_background</item>
    </style>

    <style name="TextAppearance.Sage.Settings"/>
    <style name="TextAppearance.Sage.Settings.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.Sage.Settings.Subheader">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="SageSwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <!-- do here for additional costumization on thumb, track background,text appearance -->


    </style>
    <style name="SageSwitchTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="switchStyle">@style/SageSwitchStyle</item>
        <item name="colorControlActivated">@color/ocean300</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="trackTint">@color/ocean100</item>
    </style>

</resources>
