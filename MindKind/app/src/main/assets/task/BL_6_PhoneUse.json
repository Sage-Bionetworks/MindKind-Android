    },
    {
      "identifier": "PU_4_Carry",
      "type": "singleChoice.string",
      "title": "Do you carry your phone(s) with you at all times? ",
      "choices": [
        { "text": "Yes", "value": "Yes" },
        { "text": "No",  "value": "No" },
        { "text": "Not Applicable",  "value": "Not Applicable" }
      ]
    },
    {
      "identifier": "PU_5_OtherUsers",
      "type": "integer",
      "title": "How many other people use your phone?",
      "buttonTitle": "Ok",
      "min": 0,
