<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MP.SubmitBar" parent="@style/Widget.Backbone.SubmitBar">
        <item name="positiveActionTitle">@string/rsb_BUTTON_NEXT</item>
        <item name="positiveActionColor">@color/white</item>
        <item name="negativeActionColor">@color/black</item>
    </style>

    <style name="MpToolbarTitleTransparent">
        <item name="android:textColor">@color/rsb_warm_gray</item>
    </style>

    <style name="TextAppearance.Widget.MP.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MP"/>

    <style name="MP.Divider">
        <item name="android:height">1dp</item>
        <item name="android:background">@color/appVeryLightGray</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.MP"/>
    <style name="TextAppearance.MP.Body">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.MP.Body.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.MP.Header">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>
    <style name="TextAppearance.MP.SubHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/appTextDark</item>
    </style>

    <style name="TextAppearance.MP.InstructionCustomButtonText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="TextAppearance.MP.TaskStepProgress">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
</resources>
