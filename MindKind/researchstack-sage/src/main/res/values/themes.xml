<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Sage" parent="Theme.Backbone">
        <!-- Text Color for ActionBar and Text -->
        <item name="alertDialogTheme">@style/Theme.MP.Dialog</item>
        <item name="android:alertDialogTheme">@style/Theme.MP.Dialog</item>

        <item name="android:textColor">@color/rsb_warm_gray</item>
        <item name="android:textColorPrimary">@color/sageResearchPrimary</item>
        <item name="android:textColorSecondary">@color/rsb_warm_gray</item>

        <item name="colorControlActivated">@color/sageResearchPrimaryDark</item>
        <item name="colorControlNormal">@color/sageResearchPrimary</item>
        <item name="colorPrimary">@color/sageResearchPrimary</item>
        <item name="colorAccent">@color/sageResearchPrimaryLight</item>
        <item name="colorPrimaryDark">@color/sageResearchPrimaryDark</item>
        <item name="android:listDivider">@color/rsb_list_divider</item>

        <item name="toolbarTheme">@style/Theme.Sage.Toolbar</item>
        <item name="passcodeTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>

    <style name="Theme.Sage.Toolbar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.Sage.Survey">
        <item name="toolbarTheme">@style/Theme.Sage.Toolbar.Main</item>
        <item name="colorButtonNormal">@color/sageResearchPrimary</item>
        <item name="colorPrimaryDark">@color/sageResearchPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Sage.Toolbar.Transparent">
        <item name="colorControlNormal">@color/sageResearchPrimary</item>
        <item name="colorPrimary">@color/sageResearchPrimary</item>
        <item name="colorAccent">@color/sageResearchPrimaryLight</item>
    </style>

    <style name="Theme.Sage.Main">
        <item name="toolbarTheme">@style/Theme.Sage.Toolbar.Main</item>
        <item name="colorPrimaryDark">@color/sageResearchPrimaryDark</item>
    </style>

    <style name="Theme.Sage.Toolbar.Main">
    </style>

    <style name="Theme.MP.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/sageResearchSecondary</item>
        <item name="android:textColor">@color/sageResearchSecondary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>